<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_focused="false">
        <layer-list>

            <item android:bottom="5px" android:left="0px" android:right="0px" android:top="5px">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/colorEditTextDefault" android:width="2dp"/>
                    <corners android:radius="2px" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="5px" android:left="0px" android:right="0px" android:top="5px">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/colorEditTextFocus" android:width="2dp"/>
                    <corners android:radius="5px" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>