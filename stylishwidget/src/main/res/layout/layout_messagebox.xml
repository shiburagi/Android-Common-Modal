<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <com.app.infideap.stylishwidget.view.ATextView
        android:id="@+id/textView_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_toLeftOf="@+id/layout_button"
        android:layout_toStartOf="@+id/layout_button"
        android:gravity="center_vertical"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:id="@+id/layout_button">
        <com.app.infideap.stylishwidget.view.AButton
            android:visibility="gone"
            android:layout_marginRight="6dp"
            android:id="@+id/button_action"
            style="@style/Button.Default.Outline"
            android:text="action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="12dp"
            android:id="@+id/imageView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_white_24dp" />
    </LinearLayout>

</RelativeLayout>